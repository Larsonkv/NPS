@model IEnumerable<NPS.Models.Setor>

@{
    ViewBag.Title = "Lista de Setores";
}
<br />
<br />
<h2>Setores</h2>

<p>
    @Html.ActionLink("Novo", "Create", null, new { @class = "btn btn-success" })
    @Html.ActionLink("Gerar Excel", "Excel", null, new { @class = "font-weight-bold", style= "margin-left: 85%" })
</p>
<table class="table table-hover">
    <tr>
        @*<th>ID</th>*@
        <th>Nome</th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            @*<td>@item.SetorId</td>*@
            <td>@item.Nome</td>
            <td class="float-right">
                @Html.ActionLink("NPS", "Details", new { id = item.SetorId }, new { @class = "btn btn-primary" })
                @Html.ActionLink("Editar", "Edit", new { id = item.SetorId }, new { @class = "btn btn-warning" })
                @Html.ActionLink("Deletar", "Delete", new { id = item.SetorId }, new { @class = "btn btn-danger" })
            </td>
        </tr>
    }

</table>
