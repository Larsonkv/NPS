@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <title>PM Gaspar</title>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link href="https://fonts.googleapis.com/css?family=Montserrat:300,400,600&amp;subset=latin-ext" rel="stylesheet">
    <!-- CSS -->
    <link href="~/Content/assets/css/main.css" rel="stylesheet" />
    <!-- JS -->
    <script src="~/Content/assets/js/vendor/modernizr-2.8.3.min.js"></script>
    <script src="~/Content/assets/js/vendor/jquery-1.12.0.min.js"></script>
</head>

<body onload="startResetTimer(); Play() ">
    <audio id="my_audio" src="~/Content/Aud/Teste.mp3"></audio>
    <div class="site" id="page">
        <a class="skip-link sr-only" href="#main">Skip to content</a>

        <!-- Options headline effects: .rotate | .slide | .zoom | .push | .clip -->
        <section class="hero-section hero-section--image clearfix clip">
            <div class="hero-section__wrap">
                <div class="hero-section__option">
                    <img src="~/Content/assets/images/index.jpg" alt="Hero section image" width="1280" height="1024">
                </div>
                <!-- .hero-section__option -->

                <div class="container">
                    <div class="row">
                        <div class="offset-lg-2 col-lg-8">
                            <div class="title-01 title-01--11 text-center">
                                <h2 class="title__heading">
                                    <span>Obrigado !</span>
                                </h2>
                                <div class="title__description">Sua opinião é muito importante!</div>

                                <!-- Options btn color: .btn-success | .btn-info | .btn-warning | .btn-danger | .btn-primary -->
                                <div class="title__action">
                                    <a href="/Voto/PreVoto" class="btn btn-success" id="BtnVoltar">Voltar para o Inicio</a> <br />
                                    <a class="col-form-label" id="Label1"></a>
                                </div>
                            </div> <!-- .title-01 -->
                        </div>
                    </div>
                </div>
            </div>
        </section>
    </div>
    <!-- JS -->
    <script src="~/Content/assets/js/plugins/animate-headline.js"></script>
    <script src="~/Content/assets/js/main.js"></script>

    <script>
        function Play() {
            document.getElementById("my_audio").play();
        }

        function startResetTimer() {
            time = 30;
            interval = setInterval(function () {
                time--;
                document.getElementById('Label1').innerHTML = "inicio em " + time + " segundos"
                if (time == 0) {
                    // stop timer
                    clearInterval(interval);
                    // click
                    document.getElementById('BtnVoltar').click();
                }
            }, 1000)
        }
    </script>
</body>
</html>


